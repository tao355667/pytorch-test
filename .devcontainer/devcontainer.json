		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"ms-python.autopep8",
				"ms-python.vscode-pylance",
				"mechatroner.rainbow-csv",
				"ms-azuretools.vscode-docker",
				"ms-toolsai.datawrangler"
			]
		}
	}

